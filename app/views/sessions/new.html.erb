<%= render "application/nav" %>

<h1>Login page</h1>
<%= form_with model: @user, url: sessions_path do |f| %>
  <div class="container">
    <div class="row g-3">
      <div class="col-md-6">
        <%= f.label :name, class: "form-label" %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="row g-3">
      <div class="col-md-6">
        <%= f.label :password, class: "form-label"  %><br>
        <%= f.password_field :password, class: "form-control"  %>
      </div>
    </div>
    <% flash.each do |type, msg| %>
      <div class="alert alert-warning">
        <%= msg %>
      </div>
    <% end %>
    <div class="row g-3">
      <div class="col-md-1">
        <%= f.submit 'Login', class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
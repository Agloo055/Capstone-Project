<%= render "application/nav" %>

<% if current_user %>
  <h1>Welcome, <%= current_user.name %></h1>
  <%= link_to 'Log out', session_path(current_user), data: { turbo_method: :delete} %>
<% else %>
  <h1>This is the index page</h1>
  <%= link_to 'Login', new_session_path %><br>
  <%= link_to "Secret", '/home/secret', class: "nav-link" %>
<% end %>
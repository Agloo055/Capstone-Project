<%= render "application/nav" %>

<h1>Search</h1>
<h4>Optional Params</h4>

<form action=<%=set_path(1)%>%>
    <select name="year">
        <option value=<%= nil %>>Year</option>
        <% for year in @years do %>
            <option value=<%= year %>><%= year %></option>
        <% end %>
    </select>
    <select name="min_pieces">
        <option value=<%= nil %>>Min Pieces</option>
        <% for piece in @pieces do %>
            <option value=<%= piece %>><%= piece %></option>
        <% end %>
    </select>
    <select name="max_pieces">
        <option value=<%= nil %>>Max Pieces</option>
        <% for piece in @pieces do %>
            <option value=<%= piece %>><%= piece %></option>
        <% end %>
    </select>
    <input type="submit">
</form>